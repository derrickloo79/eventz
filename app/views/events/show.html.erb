<div class="my-8 lg:py-12 max-lg:px-4 space-y-6">
    <nav class="p-0 m-0" aria-label="Breadcrumb">
        <ol class="p-0 m-0 inline-flex items-center space-x-1 md:space-x-3">
            <li class="font-mono">
                <%= link_to "Events", events_path, class: "text-blue-600 underline-offset-2"%>
            </li>
            <li>
                <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 3l7 7-7 7-1.414-1.414L12.586 10H1V9h11.586L8.586 4.414z"/>
                </svg>
            </li>
            <li aria-current="page" class="font-mono text-gray-500"><%= @event.name%></li>
        </ol>
    </nav>

    <section class="eventListCard">
        <div class="eventLeft">
            <div class="image">
                <%= main_image(@event) %>
            </div>
            <div class="max-md:hidden">
                <% if current_user %>
                    <div class="flex-none mt-2 flex flex-row items-center ">
                        <div class="py-2 px-3 w-12 text-center rounded-tl rounded-bl border-t border-b border-l border-r border-slate-300"><%= like_or_unlike_button(@event, @like) %></div>
                        <div class="py-2 px-3 w-12 text-center rounded-tr rounded-br border-t border-b border-r border-slate-300"><%= @likers.count %></div>
                    </div>
                <% end %>
            </div>
            <div class="likesAndCats-desktop-only">
                <% if @likers.present? %>
                    <h4 class="">Liked by</h4>
                    <ul>
                        <% @likers.each do |user| %>
                            <li><%= link_to user.name, user %></li>
                        <% end %>
                    </ul>
                <% end %>

                <% if @categories.present? %>
                    <h4>Categories</h4>
                    <ul>
                        <% @categories.each do |c| %>
                            <li><%= link_to c.name, c %></li>
                        <% end %>
                    </ul>
                <% end %>
            </div>
        </div>

        <div class="eventRight">
            <div class="eventNameDatePrice">
                <h1><%= @event.name %></h1>
                <h3><span><%= date_and_time(@event) %> in <%= @event.location %></span></h3>
                <div class="eventPrice">
                    <span class="">
                        <%= price(@event) %>
                    </span>
                </div>
                <h4><span><%= pluralize(@event.capacity, "spot") %> &bull; <%= no_of_registrations(@event) %></span></h4>
            </div>
               
            <div class="eventActions flex flex-col space-y-2 lg:flex-row lg:space-x-2 lg:space-y-0">
                <div class="lg:w-60 register"><%= register_or_sold_out_desktop(@event) %></div>
                    <% if current_user_admin? %>
                            <%= link_to "Edit", edit_event_path(@event), class: "buton outlined lg:w-32 max-sm:hidden" %>
                            <%= link_to "Delete", @event, class: "buton outlined-danger lg:w-32 max-sm:hidden",
                                    data: { turbo_method: :delete, turbo_confirm: "Really?!" } %>
                    <% end %>
            </div>

            <div class="eventDescription">
                <p><%= @event.description %><p>
            </div>

            <div class="likesAndCats-mobile-only">
                <% if @likers.present? %>
                    <h4 class="">Liked by</h4>
                    <ul>
                        <% @likers.each do |user| %>
                            <li><%= link_to user.name, user %></li>
                        <% end %>
                    </ul>
                <% end %>

                <% if @categories.present? %>
                    <h4>Categories</h4>
                    <ul>
                        <% @categories.each do |c| %>
                            <li><%= link_to c.name, c %></li>
                        <% end %>
                    </ul>
                <% end %>
            </div>

            <div class="actions-mobile-only md:hidden flex flex-col space-y-2">
                <% if current_user_admin? %>
                    <%= link_to "Edit", edit_event_path(@event), class: "buton outlined lg:w-32" %>
                    <%= link_to "Delete", @event, class: "buton outlined-danger lg:w-32",
                            data: { turbo_method: :delete, turbo_confirm: "Really?!" } %>
                <% end %>
            </div>
        </div>
    </section>


</div>
<div class="absolute px-4 py-6 bg-blue-600 sticky left-0 bottom-0 w-full z-30 flex flex-row space-x-4 justify-center items-center md:hidden">
    <div class="flex flex-row space-x-0 items-center">
        <div class="font-mono font-3xl px-2 py-2 rounded-full w-10 text-center"><%= like_or_unlike_button(@event, @like) %></div>
        <div class="font-mono text-lg text-amber-50">
            <%= @likers.count %>
        </div>
    </div>
    <div class="grow">
        <%= register_or_sold_out_mobile(@event) %>
    </div>
</div>