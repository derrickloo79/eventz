<h1>Registrations for <%= link_to @event.name, @event %></h1>

<ul class="registrations" >
    <% @registrations.each do |r| %>
        <li>
            <%= link_to r.user.name, r.user %> &bull; <%= r.how_heard %> &bull;
            <span style="text-secondary">
                <%= time_ago_in_words(r.created_at) %> ago
            </span>
            <div>
                <%= link_to "Edit", edit_event_registration_path(@event, r), class: "button" %> 
                <%= link_to "Delete", event_registration_path(@event, r), class: "button",
                        data: { turbo_method: :delete, turbo_confirm: "Really?!" } %>
            </div>
        </li>
    <% end %>
</ul>