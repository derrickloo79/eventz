<section style="padding-bottom: 20px">
  <%= link_to "< Back", categories_path, class: "btn btn-outline-secondary btn-sm" %>
</section>

<h1><%= pluralize(@events.size, "Event") %> under <%= @category.name%> Category</h1>

<div>
    <% @events.each do |event| %>
        <div style="padding-bottom: 40px">
            <%= link_to main_image(event), event %>
            <h3><%= event.name %></h3>
        </div>
    <% end %>
</div>